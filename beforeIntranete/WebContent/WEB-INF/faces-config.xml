<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<managed-bean>
		<managed-bean-name>loginAction</managed-bean-name>
		<managed-bean-class>com.intranet.seguridad.action.LoginAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>usuario</property-name>
			<property-class>com.intranet.bean.UsuarioDTO</property-class>
			<value>#{usuario}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuario</managed-bean-name>
		<managed-bean-class>com.intranet.bean.UsuarioDTO</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inscripcionAction</managed-bean-name>
		<managed-bean-class>com.intranet.inscripcion.action.InscripcionAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<navigation-case>
			<from-action>#{loginAction.execute}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/WelcomeAlumno.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{inscripcionAction.preCargar}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/InscripcionAlumno.xhtml</to-view-id>
		</navigation-case>		
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
	   <action-listener>org.primefaces.application.DialogActionListener</action-listener>
	    <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
	    <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
	</application>
</faces-config>
